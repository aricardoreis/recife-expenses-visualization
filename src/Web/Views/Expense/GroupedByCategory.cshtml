@model IEnumerable<CategorizedExpenseViewModel>

<div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CategoryName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Value)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CategoryName)
                    </td>
                    <td>
                        @item.FormattedValue
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @await Html.PartialAsync("_ChartView", new ChartDataViewModel() { Expenses = Model, Type = ChartType.Pie, ColumnName = "CategoryName" })

</div>